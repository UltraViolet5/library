<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:library.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             x:Class="library.MainPage">

    <ScrollView>
        <StackLayout>
            <!-- Header -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Frame Grid.Column="0" Grid.Row="0" CornerRadius="15" WidthRequest="50" HeightRequest="50"
                       Padding="0" HasShadow="False">
                    <Image Source="user.png" Margin="0"
                           HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BtnUserView}" />
                        </Image.GestureRecognizers>
                    </Image>
                </Frame>
                <Image Grid.Column="1" Grid.Row="0" Source="menu_btn.png"
                       WidthRequest="25" HeightRequest="25" HorizontalOptions="End">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding }" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>

            <!-- BOOKS -->
            <StackLayout x:Name="LastBooks">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label x:Name="BooksLabel" Grid.Row="0" Grid.Column="0" Text="Books" FontSize="Title"
                           Padding="30,10,30,10" FontFamily="News701">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BooksLbTapped}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20"
                           HorizontalOptions="End" Margin="0,0,20,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding AddBook}" />
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                <!-- Here will be added book cards -->

            </StackLayout>

            <!-- CATEGORIES -->
            <StackLayout Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Categories" FontSize="Title" Padding="30,10,30,10"
                           FontFamily="News701"/>
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20"
                           HorizontalOptions="End" Margin="0,0,20,0" />
                </Grid>
                <ScrollView Orientation="Horizontal" HorizontalOptions="Fill">
                    <StackLayout x:Name="Categories" Orientation="Horizontal" Padding="30,0,0,0" />
                    <!-- Here will be added categories btns -->

                </ScrollView>
            </StackLayout>

            <!-- MATES -->
            <StackLayout Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Mates" FontSize="Title" 
                           Padding="30,10,30,10" FontFamily="News701"/>
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20"
                           HorizontalOptions="End" Margin="0,0,20,0" />
                </Grid>
                <ScrollView Orientation="Horizontal" HorizontalOptions="Fill">
                    <StackLayout x:Name="Mates" Orientation="Horizontal" Padding="30,0,0,0">
                        <!-- Here will be added mates btns -->
                    </StackLayout>
                </ScrollView>
            </StackLayout>

            <!-- BORROWINGS -->
            <StackLayout x:Name="Rentals" Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="My rentals" FontSize="Title"
                           Padding="30,10,30,10" FontFamily="News701"/>
                </Grid>
                <!-- Here will be added rentals cards -->

            </StackLayout>

            <Button x:Name="btnLoginPage" Text="Login" />
            <Button x:Name="btnRegister" Text="Register" />
            <Button x:Name="btnUserView" Text="User View" />
            <Button x:Name="btnMates" Text="MatesPage" />
            <Button x:Name="btnMyRentals" Text="My Rentals" />
            <Button x:Name="btnRented" Text="Rented" />
            <Button x:Name="btnSettings" Text="Settings" />

        </StackLayout>
    </ScrollView>

</ContentPage>