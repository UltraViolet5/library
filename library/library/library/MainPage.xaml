<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="library.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#fff" Padding="24" CornerRadius="0" HasShadow="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Frame Grid.Column="0" Grid.Row="0" CornerRadius="15" WidthRequest="50" HeightRequest="50" Padding="0" HasShadow="False">
                        <Image Source="user.png" Margin="0"
                           HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand"></Image>
                    </Frame>                    
                    <Image Grid.Column="1" Grid.Row="0" Source="menu_btn.png" 
                           WidthRequest="25" HeightRequest="25" HorizontalOptions="End"></Image>
                </Grid>
            </Frame>

            <!-- Here will be added book cards -->
            <StackLayout x:Name="LastBooks">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Books" FontSize="Title" Padding="30,10,30,10" />
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20" 
                           HorizontalOptions="End" Margin="0,0,20,0"></Image>
                </Grid>
            </StackLayout>

            <!-- Here will be added categories btns -->
            <StackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Categories" FontSize="Title" Padding="30,10,30,10" />
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20" 
                           HorizontalOptions="End" Margin="0,0,20,0"></Image>
                </Grid>
                <StackLayout x:Name="Categories" Orientation="Horizontal" Padding="30,0,0,0">

                </StackLayout>
            </StackLayout>

            <!-- Here will be added mates btns -->
            <StackLayout x:Name="Mates">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Mates" FontSize="Title" Padding="30,10,30,10" />
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20" 
                           HorizontalOptions="End" Margin="0,0,20,0"></Image>
                </Grid>
            </StackLayout>

            <!-- Here will be added rentals cards -->
            <StackLayout x:Name="Rentals">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="My rentals" FontSize="Title" Padding="30,10,30,10" />
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20" 
                           HorizontalOptions="End" Margin="0,0,20,0"></Image>
                </Grid>
            </StackLayout>

            <Button x:Name="btnLoginPage" Text="Login" />
            <Button x:Name="btnRegister" Text="Register" />
            <Button x:Name="btnUserView" Text="User View" />
            <Button x:Name="btnBooks" Text="Books" />
            <Button x:Name="btnMates" Text="Mates" />
            <Button x:Name="btnMyRentals" Text="My Rentals" />
            <Button x:Name="btnRented" Text="Rented" />
            <Button x:Name="btnSettings" Text="Settings" />

        </StackLayout>
    </ScrollView>

</ContentPage>