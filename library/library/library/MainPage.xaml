<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:library.ViewModel" x:DataType="viewmodel:MainViewModel"
             x:Class="library.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#fff" Padding="24" CornerRadius="0" HasShadow="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Frame Grid.Column="0" Grid.Row="0" CornerRadius="15" WidthRequest="50" HeightRequest="50"
                           Padding="0" HasShadow="False">
                        <Image Source="user.png" Margin="0"
                           HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BtnUserView}"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Frame>                    
                    <Image Grid.Column="1" Grid.Row="0" Source="menu_btn.png" 
                           WidthRequest="25" HeightRequest="25" HorizontalOptions="End">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding }"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </Frame>

            <!-- Here will be added book cards -->
            <StackLayout x:Name="LastBooks">
                
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                      <Label x:Name="BooksLabel"   Grid.Row="0" Grid.Column="0" Text="Books" FontSize="Title" Padding="30,10,30,10" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BooksLbTapped}"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20" 
                           HorizontalOptions="End" Margin="0,0,20,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding AddBook}"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </StackLayout>


            <!-- Here will be added categories btns -->
            <StackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Categories" FontSize="Title" Padding="30,10,30,10" />
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20" 
                           HorizontalOptions="End" Margin="0,0,20,0">
                    </Image>
                </Grid>
                <ScrollView Orientation="Horizontal" HorizontalOptions="Fill">
                    <StackLayout x:Name="Categories" Orientation="Horizontal" Padding="30,0,0,0" />
                </ScrollView>
            </StackLayout>

            <!-- Here will be added mates btns -->
            <StackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="Mates" FontSize="Title" Padding="30,10,30,10" />
                    <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20"
                           HorizontalOptions="End" Margin="0,0,20,0" />
                </Grid>
                <ScrollView Orientation="Horizontal" HorizontalOptions="Fill">
                    <StackLayout x:Name="Mates" Orientation="Horizontal" Padding="30,0,0,0">
                        <!-- Data mock up TODO generating element from factory -->
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                        <Frame CornerRadius="15" WidthRequest="50" HeightRequest="50"
                               Padding="0" HasShadow="False">
                            <Image Source="user.png" Margin="0"
                                   HeightRequest="50" WidthRequest="50" HorizontalOptions="StartAndExpand" />
                        </Frame>
                    </StackLayout>
                </ScrollView>
            </StackLayout>

            <!-- Here will be added rentals cards -->
            <StackLayout x:Name="Rentals">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Text="My rentals" FontSize="Title"
                           Padding="30,10,30,10" />
                </Grid>

                <!-- Data mock up TODO generating element from factory -->
                <Frame Padding="15,5,15,5" Margin="25,10,25,10" CornerRadius="7">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Image Source="calender.png" WidthRequest="15" HeightRequest="15"
                               HorizontalOptions="Start" />
                        <Label Grid.Column="1" Text="Return at 05/07/2021" HorizontalOptions="StartAndExpand"
                               HorizontalTextAlignment="Start" />
                        <Image Grid.Column="2" Source="arrow.png" HorizontalOptions="End"
                               WidthRequest="10" />
                    </Grid>
                </Frame>
            </StackLayout>

            <Button x:Name="btnLoginPage" Text="Login" />
            <Button x:Name="btnRegister" Text="Register" />
            <Button x:Name="btnUserView" Text="User View" />
            <Button x:Name="btnBooks" Text="Books" />
            <Button x:Name="btnMates" Text="Mates" />
            <Button x:Name="btnMyRentals" Text="My Rentals" />
            <Button x:Name="btnRented" Text="Rented" />
            <Button x:Name="btnSettings" Text="Settings" />

        </StackLayout>
    </ScrollView>

</ContentPage>