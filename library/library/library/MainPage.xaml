<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="library.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White"
                       FontSize="36" />
            </Frame>

            <!-- Here will be added book cards -->
            <StackLayout x:Name="LastBooks">
                <Label Text="Books" FontSize="Title" Padding="30,10,30,10" />
            </StackLayout>

            <Label Text="Books" FontSize="Title" Padding="30,10,30,10" />
            <Button x:Name="btnLoginPage" Text="Login" />
            <Button x:Name="btnRegister" Text="Register" />
            <Button x:Name="btnUserView" Text="User View" />
            <Button x:Name="btnBooks" Text="Books" />
            <Button x:Name="btnMates" Text="Mates" />
            <Button x:Name="btnMyRentals" Text="My Rentals" />
            <Button x:Name="btnRented" Text="Rented" />
            <Button x:Name="btnSettings" Text="Settings" />

        </StackLayout>
    </ScrollView>

</ContentPage>