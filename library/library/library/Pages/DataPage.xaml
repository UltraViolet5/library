<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:library.ViewModel"
             x:DataType="viewmodel:AddBookViewModel"
             x:Class="library.Pages.DataPage">

    <ContentPage.Title>Add Data</ContentPage.Title>

    <Grid>
        <BoxView x:Name="slGradient" Scale="20" AnchorX="1" AnchorY="0">
            <BoxView.Background>
                <LinearGradientBrush>

                    <GradientStop Color="DarkBlue" Offset="0.2" />
                    <GradientStop Color="LightBlue" Offset="0.3" />
                    <GradientStop Color="Indigo" Offset="0.4" />
                    <GradientStop Color="Aqua" Offset="0.5" />
                    <GradientStop Color="CornflowerBlue" Offset="0.6" />
                    <GradientStop Color="DarkBlue" Offset="0.7" />
                    <GradientStop Color="LightBlue" Offset="0.8" />
                    <GradientStop Color="Indigo" Offset="0.9" />
                    <GradientStop Color="Aqua" Offset="1.0" />

                </LinearGradientBrush>
            </BoxView.Background>

        </BoxView>
        <ScrollView>
            <StackLayout Padding="40">
                <Frame HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Start"
                       BackgroundColor="Transparent" BorderColor="White">
                    <Label x:Name="BarcodeLabel" FontSize="15"
                           HorizontalTextAlignment="Center" TextColor="White" Text="Barcode" />
                </Frame>

                <Label Text="Titlte" HorizontalTextAlignment="Center" FontSize="18"
                       FontFamily="News701" Margin="0" TextColor="White" />
                <Frame Padding="0" CornerRadius="12" Margin="0,10">
                    <Entry Placeholder="Titlte" HorizontalTextAlignment="Center"
                           BackgroundColor="White" WidthRequest="150" FontFamily="News701" />
                </Frame>
                <Label Text="Autor" HorizontalTextAlignment="Center" FontSize="18"
                       FontFamily="News701" Margin="0" TextColor="White" />
                <Button x:Name="AddAutor" Text="+" HorizontalOptions="FillAndExpand" Clicked="AddAutor_Clicked"
                        HeightRequest="40" WidthRequest="30" BackgroundColor="White" />
                <Frame x:Name="AutorFrame" Padding="0" CornerRadius="12" Margin="0,10">
                    <Entry Placeholder="Autor" HorizontalTextAlignment="Center"
                           BackgroundColor="White" WidthRequest="150" FontFamily="News701" />
                </Frame>
                <Label Text="Publishing Year" HorizontalTextAlignment="Center" FontSize="18"
                       FontFamily="News701" Margin="0" TextColor="White" />
                <Frame Padding="0" CornerRadius="12" Margin="0,10">
                    <DatePicker BackgroundColor="White" WidthRequest="150" FontFamily="News701" />
                </Frame>
                <Label Text="Category" HorizontalTextAlignment="Center" FontSize="18"
                       FontFamily="News701" Margin="0" TextColor="White" />
                <Button x:Name="AddCategory" Text="+" Clicked="AddCategory_Clicked" HeightRequest="40"
                        WidthRequest="30" BackgroundColor="White" HorizontalOptions="FillAndExpand" />
                <Frame x:Name="CategoryFrame" Padding="0" CornerRadius="12" Margin="0,10">
                    <Entry Placeholder="Category" HorizontalTextAlignment="Center"
                           BackgroundColor="White" WidthRequest="150" FontFamily="News701" />
                </Frame>


                <Button x:Name="SaveBtn" Text="Save" Clicked="SaveBtn_Clicked" />
                <Button x:Name="CancelBtn" Text="Cancel" Clicked="CancelBtn_Clicked" />
            </StackLayout>
        </ScrollView>

    </Grid>


</ContentPage>