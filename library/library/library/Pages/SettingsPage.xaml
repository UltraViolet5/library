<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="library.Pages.SettingsPage">
    <ContentPage.Content>
        <StackLayout x:Name="Settings" Padding="20">
            <Label Text="Settings" FontSize="Title"
                   Padding="10,10,30,10" FontFamily="News701" />
            <StackLayout Orientation="Horizontal">
                <Label Text="Dark mode" FontSize="Medium"
                       Padding="10,10,30,10" FontFamily="News701" />
                <Switch></Switch>
            </StackLayout>
            <Button Text="privacy policy" FontFamily="News701"></Button>
            <Button Text="Authors" FontFamily="News701"></Button>
            <Button Text="Logout" FontFamily="News701"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>