<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:library.ViewModel;assembly=library"
             x:Class="library.Pages.LoginPage">

    <ContentPage.BindingContext>
        <viewModel:LoginViewModel></viewModel:LoginViewModel>
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <StackLayout Margin="70,0">
            <Image Source="logo.png" WidthRequest="150" HorizontalOptions="Center"
                   Margin="0, 100,0,20" />
            <Label Text="Login" HorizontalTextAlignment="Center" FontSize="18"
                   FontFamily="News701" Margin="0" />
            <Frame Padding="0" CornerRadius="12" Margin="0,10">
                <Entry Placeholder="e-mail" HorizontalTextAlignment="Center"
                       BackgroundColor="#e6e6e6" WidthRequest="150" FontFamily="News701"
                       Text="{Binding Email}"/>
            </Frame>
            <Frame Padding="0" CornerRadius="12" Margin="0,10">
                <Entry Placeholder="password" HorizontalTextAlignment="Center"
                       BackgroundColor="#e6e6e6" WidthRequest="150"
                       IsPassword="True" IsEnabled="True" FontFamily="News701"
                       Text="{Binding Password}"/>
            </Frame>
            <Label x:Name="ValidationMsg" Text="Incorrect login or password." HorizontalTextAlignment="Center"
                   TextColor="Red" IsVisible="{Binding LoginValidation_ShowMsg}"></Label>
            <Image Source="arrowfilled.png" HorizontalOptions="End" Margin="0,0"
                   WidthRequest="40">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToMainPageCommand}"></TapGestureRecognizer>
                </Image.GestureRecognizers>
            </Image>
            <Label Text="or" HorizontalTextAlignment="Center" FontSize="18"
                   FontFamily="News701" Margin="0"/>
            <Button Text="register" Margin="0,0" FontFamily="News701"
                    Command="{Binding RegisterCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>