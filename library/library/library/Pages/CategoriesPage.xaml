<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="library.Pages.CategoriesPage">
    <ContentPage.Content>
        <!-- CATEGORIES -->
        <StackLayout Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Text="Categories" FontSize="Title" Padding="10,10"
                       FontFamily="News701">
                </Label>
                <Image Grid.Row="0" Grid.Column="1" Source="plus.png" WidthRequest="20" HeightRequest="20"
                       HorizontalOptions="End" Margin="0,0,20,0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding AddCategoryCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
            <ScrollView Orientation="Horizontal" HorizontalOptions="Fill">
                <StackLayout x:Name="Categories" Orientation="Horizontal" />
                <!-- Here will be added categories btns -->

            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>